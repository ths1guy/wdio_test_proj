    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Run WDIO tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "souceMaps": true,
            "args": [
                "./entrypoint.conf.js",
                "--spec",
                "./test/createAccount.ts" // файл который хотим подебажить
            ],
            "env": {
                "DEBUG": "1"
            },
            "port": 5858,
            "console": "integratedTerminal" 
        }
    ]
}